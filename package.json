{
	"name": "app",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"build": "next build",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"dev": "next dev --turbopack -H localhost -p 5173",
		"lint": "next lint",
		"start": "next start",
		"biome:format": "biome format",
		"format-and-lint": "biome check .",
		"check": "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true",
		"format-and-lint:fix": "biome check . --write",
        "synth": "cdk synth",
		"deploy": "cdk deploy --all",
		"destroy": "cdk destroy --all",
		"lint": "biome check src",
		"format": "biome format src --write",
         "dev": "cd app && yarn dev",
    "build": "cd app && yarn build",
    "start": "cd app && yarn start",
    "cognito:install": "cd packages/cognito && yarn install",
    "cognito:bootstrap": "cd packages/cognito && npx cdk bootstrap",
    "cognito:synth": "cd packages/cognito && npx cdk synth",
    "cognito:deploy": "cd packages/cognito && npx cdk deploy --all",
    "cognito:destroy": "cd packages/cognito && npx cdk destroy --all",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "db:setup": "yarn docker:up && cd app && yarn db:push",
    "db:studio": "cd app && yarn db:studio",
    "biome:format:all": "yarn --cwd app run format-and-lint:fix -- --unsafe && yarn --cwd packages/cognito run format",
    "biome:lint:all": "yarn --cwd app run format-and-lint:fix -- --unsafe && yarn --cwd packages/cognito run lint"
	},
